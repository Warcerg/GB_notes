<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/card_layout_margin_start"
            android:layout_marginEnd="@dimen/card_layout_margin_end"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/cardNoteIndex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="start"
                    android:text="@string/card_index_view"
                    android:textSize="@dimen/card_index_text_size" />

                <TextView
                    android:id="@+id/cardNoteHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/card_heading_text"
                    android:textSize="@dimen/card_heading_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cardNoteDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="@string/card_date_text"
                    android:textSize="@dimen/card_date_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cardNotePreview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_note_preview_layout_height"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:text="@string/card_note_preview_text"
                    android:textSize="@dimen/card_note_preview_text_size" />

            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>